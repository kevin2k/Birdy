@model Birdy.Models.CategoryGroup

@{
    ViewData["Title"] = "Delete";
}

<br />
<h2>Rubrik-Gruppe löschen</h2>
<br />

<form asp-action="Delete">
    <div class="form-border">

        <input type="hidden" asp-for="Id" />
        <fieldset disabled>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Name" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="DisplayOrder" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="DisplayOrder" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Description" class="control-label"></label>
                </div>
                <div class="col-4">
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>
            </div>
        </fieldset>
        <br />
        <div class="form-group">
            <input type="submit" value="Löschen" class="btn btn-danger" /> &nbsp;
            <a asp-action="Index" class="btn btn-success">Zurück zur Liste</a>
        </div>
    </div>
</form>

