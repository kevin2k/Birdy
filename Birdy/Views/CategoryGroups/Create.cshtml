@model Birdy.Models.CategoryGroup

@{
    ViewData["Title"] = "Create";
}
<br />
<h2>Rubrik-Gruppe Erstellen</h2>
<br />
<hr />
<form asp-action="Create">
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Description" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="DisplayOrder" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="DisplayOrder" class="form-control" />
            </div>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <!--Buttons "Erstellen" und "Zurück"-->
        <div class="form-group">
            <input type="submit" value="Erstellen" class="btn btn-primary" /> &nbsp;
            <a asp-action="Index" class="btn btn-success">Zurück zur Liste</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
