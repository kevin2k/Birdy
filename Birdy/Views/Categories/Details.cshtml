@model Birdy.Models.Category

@{
    ViewData["Title"] = "Details";
}

<br />
<h2>Rubriken Details</h2>
<br />

<div class="form-border">
    <fieldset disabled>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="custom-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CategoryGroup.Name" class="custom-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="CategoryGroup.Name" class="form-control" />
            </div>
        </div>
    </fieldset>
    <br />
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-success">Zurück zur Liste</a>
    </div>
</div>

